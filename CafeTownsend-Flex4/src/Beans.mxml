<?xml version="1.0" encoding="utf-8"?>
<swiz:BeanProvider xmlns:swiz="http://swiz.swizframework.org" xmlns:fx="http://ns.adobe.com/mxml/2009"
				   xmlns:model="com.cafetownsend.model.*" xmlns:controller="com.cafetownsend.controller.*"
				   xmlns:service="com.cafetownsend.service.*">

	<fx:Script>
		<![CDATA[
			import com.cafetownsend.presentation.EmployeePresentationModel;
			import com.cafetownsend.presentation.LoginPresentationModel;
		]]>
	</fx:Script>

	<!-- Application level model and controller.
		 Handle login, hold the state and user of the application -->
	<model:AppModel id="appModel" />
	<controller:AppController />

	<!-- Employee level model and controller. -->
	<model:EmployeeModel id="employeeModel" />
	<controller:EmployeeController />

	<!-- Presentation models -->
	<!-- Presentation models are generally injected into views and should be declared as Prototype
		 to be instantiated lazy when the corresponding view is added to the display chain -->
	<swiz:Prototype type="{LoginPresentationModel}" />
	<swiz:Prototype type="{EmployeePresentationModel}" />

	<!-- Service Helper -->
	<swiz:ServiceRequestUtil />

	<!-- Service Delegates -->
	<service:UserDelegate />
	<service:EmployeeDelegate />

</swiz:BeanProvider>
