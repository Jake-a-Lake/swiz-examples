<?xml version="1.0" encoding="utf-8"?>
<s:Group xmlns:fx="http://ns.adobe.com/mxml/2009" xmlns:s="library://ns.adobe.com/flex/spark" xmlns:mx="library://ns.adobe.com/flex/mx" currentState="{model.currentState}">

	<fx:Script>
		<![CDATA[
			import com.cafetownsend.presentation.EmployeePresentationModel;
			[Bindable]
			[Inject]
			public var model:EmployeePresentationModel;
		]]>
	</fx:Script>

	<s:layout>
		<s:VerticalLayout />
	</s:layout>

	<s:states>
		<s:State name="default" />
		<s:State name="detail" />
		<s:State name="add" />
	</s:states>

	<s:HGroup>
		<s:Button label="Add Employee" />
		<s:Button label="Logout" />
	</s:HGroup>
	<s:HGroup width="100%" height="100%">
		<s:List width="200" dataProvider="{model.employees}" />

		<mx:Form>
			<mx:FormItem label="First Name" required="true">
				<s:TextInput id="firstName" />
			</mx:FormItem>
			<mx:FormItem label="Last Name" required="true">
				<s:TextInput id="lastName" />
			</mx:FormItem>
			<mx:FormItem label="Start Date">
				<mx:DateChooser id="startDate" />
			</mx:FormItem>
			<mx:FormItem label="Email" required="true">
				<s:TextInput id="email" />
			</mx:FormItem>
			<s:Button label="Submit" />
			<s:Button label="Delete" />
		</mx:Form>
	</s:HGroup>

</s:Group>
